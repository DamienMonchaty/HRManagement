@model HRManagement.Web.Dto.ClientViewModel
@{

    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>Modification</h1>
            <form method="post" asp-controller="Client" asp-action="Edit" asp-route-id="@Model.Id">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <button type="submit" class="btn-outline-primary btn-lg">Mofifier</button>
                <button type="reset" class="btn-outline-danger btn-lg">Clear</button>
            </form>
        </div>
    </div>
</div>