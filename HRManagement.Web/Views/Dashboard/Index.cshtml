@model Nest.ISearchResponse<Project>
@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row mb-3">
        <div class="col-lg-12">
            <div class="card card-block card-inverse card-primary text-center" style="background-color:cadetblue;color:whitesmoke;font-weight:bold">
                <h1 class="display-2 hidden-xs-down">
                    Dashboard
                </h1>
            </div>
        </div>
    </div>
    @if (User.IsInRole("Administrator"))
    {
        <div class="row mb-3">
            <div class="col-xl-3 col-lg-6">
                <div class="card card-inverse card-success">
                    <div class="card-block bg-success">
                        <div class="rotate">
                            <i class="fa fa-user fa-5x"></i>
                        </div>
                        <h6 class="text-uppercase">Employés</h6>
                        <h1 class="display-1">@ViewData["CountUsers"]</h1>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6">
                <div class="card card-inverse card-danger">
                    <div class="card-block bg-danger">
                        <div class="rotate">
                            <i class="fa fa-list fa-4x"></i>
                        </div>
                        <h6 class="text-uppercase">Projets</h6>
                        <h1 class="display-1">@ViewData["CountProjects"]</h1>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6">
                <div class="card card-inverse card-info">
                    <div class="card-block bg-info">
                        <div class="rotate">
                            <i class="fa fa-twitter fa-5x"></i>
                        </div>
                        <h6 class="text-uppercase">Missions</h6>
                        <h1 class="display-1">@ViewData["CountMissions"]</h1>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6">
                <div class="card card-inverse card-warning">
                    <div class="card-block bg-warning">
                        <div class="rotate">
                            <i class="fa fa-share fa-5x"></i>
                        </div>
                        <h6 class="text-uppercase">Clients</h6>
                        <h1 class="display-1">@ViewData["CountClients"]</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row mb-3">
            <div class="col-lg-12">
                <div class="card border-0" id="users">
                    @Html.Action("GetAllUsers", "User")
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-lg-12">
                <div class="card card-block card-inverse card-primary text-center" style="background-color:cadetblue;color:whitesmoke;font-weight:bold">
                    <blockquote class="card-blockquote">
                        
                    </blockquote>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-lg-12">
                <div class="card border-0" id="projects">
                    @Html.Action("GetAllProjects", "Project")
                </div>
                <!--/card-->
            </div>
            <!--/col-->
            <br />
            <div class="clearfix"></div>
            <div class="col-lg-8">
                <div class="card border-0" id="missions">
                    @Html.Action("GetAllMissions", "Mission")
                </div>
                <!--/card-->
            </div>
            <!--/col-->
            <div class="col-lg-4">
                <div class="card border-0" id="clients">
                    @Html.Action("GetAllClients", "Client")
                </div>
            </div>
        </div>
    }
    @if (User.IsInRole("Visitor"))
    {
        <div class="row mb-3">
            <div class="col-lg-8">
                <div class="card border-0" id="missionsByUser">
                    @Html.Action("GetAllMissionsByUserId", "Mission")
                </div>
                <!--/card-->
            </div>
            <!--/col-->
            <div class="col-lg-4">
                <div class="card card-block border-0">
                    <h2 class="card-title">Informations</h2>
                    <p class="card-text">...</p>
                </div>
            </div>
            <!--/col-->
        </div>
        <div class="row mb-3">
            <div class="col-lg-12">
                <div class="card card-block card-inverse card-primary text-center" style="background-color:cadetblue;color:whitesmoke;font-weight:bold">
                    <blockquote class="card-blockquote">
                    </blockquote>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-lg-8">
                <div class="card border-0" id="projectsByUser">
                    @Html.Action("GetAllProjectsByUserId", "Project")
                </div>
                <!--/card-->
            </div>
            <!--/col-->
            <div class="col-lg-4">
                <div class="card card-block border-0">
                    <h2 class="card-title">Informations</h2>
                    <p class="card-text"></p>
                </div>
            </div>
            <!--/col-->
        </div>
    }
}

