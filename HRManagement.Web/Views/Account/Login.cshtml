@model HRManagement.Web.Dto.LoginViewModel
@{

    ViewData["Title"] = "Login";
    //Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>Se connecter</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                        <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>
                </div>
                <button type="submit" class="btn-outline-primary btn-lg">Login</button>
                <button type="reset" class="btn-outline-danger btn-lg">Clear</button>
            </form>
        </div>
    </div>
</div>