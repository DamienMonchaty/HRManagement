@model HRManagement.Web.Dto.ProjectViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-lg-12">
            <div class="card card-block card-inverse card-primary text-center" style="background-color:cadetblue;color:whitesmoke;font-weight:bold">
                <h1 class="display-2 hidden-xs-down">
                    @Model.Libelle
                </h1>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-lg-10">
            <div class="card card-default card-block border-0">
                <div class="form-group">
                    <label style="font-weight:bold">Libelle :</label>
                    <label>@Model.Libelle</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Description :</label>
                    <label>@Model.Description</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Date de début :</label>
                    <label>@Model.StartDate</label>
                </div>
                    <div class="form-group">
                    <label style="font-weight:bold">Date de fin :</label>
                    <label>@Model.EndDate</label>
                </div>
                    <div class="form-group">
                    <label style="font-weight:bold">Client :</label>
                    <label>@Model.Client.Name</label>
                </div>
                <div class="form-group">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var elt in Model.Users)
                            {
                                <tr>
                                    <td>@elt.FirstName</td>
                                    <td>@elt.LastName</td>
                                    <td>@elt.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

