@model HRManagement.Web.Models.User
@{
    ViewData["Title"] = "GetUser";
}
<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-lg-6">
            <div class="card card-default card-block border-0">
                <h1>@Model.Email</h1>
                <div class="form-group">
                    <label style="font-weight:bold">Email :</label>
                    <label>@Model.Email</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Prénom :</label>
                    <label>@Model.FirstName</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Nom :</label>
                    <label>@Model.LastName</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Date Anniversaire</label>
                    <label>@Model.BirthDate</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Lieu Anniversaire</label>
                    <label>@Model.BirthPlace</label>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card card-default card-block border-0">
                <br />
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Rue 1 :</label>
                    <label>@Model.Address.Street1</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Rue 2 :</label>
                    <label>@Model.Address.Street2</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Rue 3 :</label>
                    <label>@Model.Address.Street3</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Code Postal :</label>
                    <label>@Model.Address.ZipCode</label>
                </div>
                <div class="form-group">
                    <label style="font-weight:bold">Ville :</label>
                    <label>@Model.Address.City</label>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row mb-3">
        <div class="col-lg-6">
            <div class="card card-default card-block border-0">
                <div class="form-group">
                    <label>Diplômes</label>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Libellé</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var elt in Model.Diplomas)
                            {
                                <tr>
                                    <td>@elt.Libelle</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card card-default card-block border-0">
                <div class="form-group">
                    <label>Ecoles</label>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Libellé</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var elt in Model.Schools)
                            {
                                <tr>
                                    <td>@elt.Libelle</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


