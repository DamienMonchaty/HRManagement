<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRManagement.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HRManagement</a>
            <button type="button" class="hidden-md-up navbar-toggler" data-toggle="offcanvas" title="Toggle responsive left sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            </div>
        </nav>
    </header>
    <div class="container-fluid" id="main">
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-md-3 col-lg-2 sidebar-offcanvas" id="sidebar" role="navigation">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav flex-column pl-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold">Hello @User.Identity.Name!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Synthèse</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Nouvel Employe</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Add">Nouveau Projet</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Add">Nouveau Client</a>
                            </li>
                        }
                        @if (User.IsInRole("Visitor"))
                        {

                        }
                        <li class="nav-item">
                            <a class="nav-link" href="#submenu1" data-toggle="collapse" data-target="#submenu1">Profile ▾</a>
                            <ul class="list-unstyled flex-column pl-3 collapse" id="submenu1" aria-expanded="false">
                                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index">Paramètres</a></li>
                                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Se déconnecter</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav flex-column pl-1">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                    </ul>
                }
            </div>
            <main role="main" class="col-md-9 col-lg-10 main">
                @RenderBody()
                @*<ajax-spa render-body="@RenderBody()"></ajax-spa>*@
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />
    @*<script src="~/AjaxSpaResource/js/core.js"></script>
        <script src="~/AjaxSpaResource/js/spa.js"></script>*@
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $("[data-toggle=offcanvas]").click(function () {
                $(".row-offcanvas").toggleClass("active");
            });
        });
    </script>
</body>
</html>
