@model IEnumerable<HRManagement.Web.Models.Client>

<h2 class="sub-header">Nos clients</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Description</td>
                <td>
                    <a class="btn btn-outline-info" asp-controller="Client" asp-action="Edit" asp-route-id="@c.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a class="btn btn-outline-primary" asp-controller="Client" asp-action="Delete" asp-route-id="@c.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
